<p id="notice"><%= notice %></p>
<div class="container">
<h3 class="text-center">Альбомы</h3>

  <% @albums.each do |album| %>
    <div class="col-md-4 thumbnail">
        <%= link_to album.title, album_path(album) %><br/>
        <%= link_to image_tag(album.image, class: "ex1"), album %><br/>
        
        <% if current_user && (current_user.editor? || current_user.admin?) %> 
          
          <%= link_to 'Edit', edit_album_path(album) %>
          <%= link_to 'Destroy', album, method: :delete, data: { confirm: 'Are you sure?' } %>
       <% end %>
    </div> 
    <% end %>


<br/>
<% if current_user && (current_user.editor? || current_user.admin?) %> 
  <%= link_to 'New Album', new_album_path %>
<% end %>
</div>

